<?xml version="1.0" encoding="utf-8" ?>
<AnimationSequence>
	<step>
		<option text="Take syringe in injecting hand and remove needlecap" animation="Remove Cap" />
		<option text="Grab skin crease"/>
		<option text="Inject medicine"/>
	</step>
	<step>
		<option text="Inject needle in a straight 90 degree angle" animation="InjectStraight" />
		<option text="Inject needle in a straight 45 degree angle"/>
		<option text="Inject needle under a 90 degree angle"/>
	</step>
	<step>
		<option text="Fixate syringe and needle" animation="FixateAll" />
		<option text="Inject medicine" />
		<option text="Don't fixate needle" />
	</step>
	<step>
		<option text="Inject medicine slow and steady" animation="InjectSlow" />
		<option text="Inject medicine fast and steady"/>
		<option text="Inject medicine in steps"/>
	</step>
	<step>
		<option text="Pull needle out of skin" animation="PullNeedle" />
		<option text="Massage skin" />
		<option text="Wait 10 seconds" />
	</step>
</AnimationSequence>