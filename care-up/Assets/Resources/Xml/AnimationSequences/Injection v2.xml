<?xml version="1.0" encoding="utf-8" ?>
<AnimationSequence>
	<step>
		<option text="Take syringe in right hand and remove the needle cap." animation="Remove Cap" />
		<option text="Pull skin"/>
		<option text="Inject needle"/>
	</step>
	<step>
		<option text="Pull the skin with ring and middle finger to the side" animation="Pull Skin" />
		<option text="Inject needle with fast and straight motion"/>
		<option text="Inject needle with a slow motion"/>
	</step>
	<step>
		<option text="Inject needle with a fast and straight motion" animation="Inject Needle" />
		<option text="Inject needle with a slow and straight motion"/>
		<option text="Inject needle with fast and angled motion"/>
	</step>
	<step>
		<option text="Fixate the needle with the hand not holding the syringe" animation="Fixate Needle" />
		<option text="Pull back compression part"/>
		<option text="Inject medicine"/>
	</step>
	<step>
		<option text="Pull compression part" animation="Pull Compression part" />
		<option text="Inject Medicine"/>
		<option text="Push compression part"/>
	</step>
    <step>
		<option text="Inject medicine slow and steady" animation="InjectSlow" />
		<option text="Inject medicine fast and steady"/>
		<option text="Inject medicine in steps"/>
	</step>
    <step>
		<option text="leave the needle in the muscle for 10 seconds." animation="Wait10Sec" />
		<option text="Leave needle in for 5 minutes"/>
		<option text="Pull the needle out"/>
	</step>
    <step>
		<option text="Pull the needle out of the skin" animation="PullNeedle" />
		<option text="massage the skin"/>
		<option text="Rotate needle"/>
	</step>
    <step>
        <option text="Release skin" animation="ReleaseSkin" />
    </step>
</AnimationSequence>