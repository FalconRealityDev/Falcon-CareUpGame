<?xml version="1.0" encoding="utf-8" ?>
<AnimationSequence>
  	<step>
		<option text="Knip de pleister" animation="CutPlaster"/>
		<option text="Breng de pleister over het midden van de wond aan"/>
		<option text="Verwijder de middelste beschermstrip"/>
	</step>

	<step>
		<option text="Verwijder de middelste beschermstrip" animation="RemoveMidCover"/>
		<option text="Verwijder de rechter beschermstrip"/>
		<option text="Trek de handschoenen uit en pas handhygiëne toe"/>
	</step>

	<step>
		<option text="Plak de pleister over het midden van de wond" animation="AttachPlaster"/>
		<option text="Plak de pleister iets boven het midden van de wond"/>
		<option text="Verwijder de rechter beschermstrip"/>
	</step>

	<step>
		<option text="Verwijder de linker beschermstrip" animation="RemoveLeftCover"/>
		<option text="Trek de handschoenen uit"/>
		<option text="Druk de pleister goed aan zodat deze goed blijft zitten"/>
	</step>

	<step>
		<option text="Verwijder de rechter beschermstrip" animation="RemoveRightCover"/>
		<option text="Vraag de cliënt rechtop te gaan zitten"/>
		<option text="Knip de pleister"/>
	</step>
	
	

	
</AnimationSequence>
